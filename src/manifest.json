{
  "name": "HDrezka for English learners",
  "description": "HDrezka for English learners",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "manifest_version": 3,
  "content_scripts": [
    {
      "js": [
        "scripts/index.js"
      ],
      "matches": [
        "https://hdrezka.ag/*.html"
      ]
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "HDrezka for English learners",
    "default_icon": "assets/icon.png",
    "default_popup": "popup/popup.html"
  }
}
